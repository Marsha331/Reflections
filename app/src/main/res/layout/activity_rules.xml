<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.swallowsnest.reflections.RulesActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:text="Home"
        android:background="#145A32"
        android:textColor="#ffffff"
        android:layout_margin="4dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Official Rules"
        android:textSize="45sp"
        android:textAlignment="center"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="8dp"
            android:text="@string/rules_text"
            />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click the Specific Category Rules"
        android:textAlignment="center"
        android:textSize="25sp"
        android:padding="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/danceAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dance"
            android:layout_weight="1"
            android:background="#145A32"
            android:textColor="#ffffff"
            android:layout_margin="4dp"/>


        <Button
            android:id="@+id/filmAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Film"
            android:layout_weight="1"
            android:background="#145A32"
            android:textColor="#ffffff"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/litAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lit"
            android:layout_weight="1"
            android:background="#145A32"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            />

        <Button
            android:id="@+id/musicAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:layout_weight="1"
            android:background="#145A32"
            android:textColor="#ffffff"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/photoAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo"
            android:layout_weight="1"
            android:background="#145A32"
            android:textColor="#ffffff"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/visualAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visual"
            android:layout_weight="1"
            android:background="#145A32"
            android:textColor="#ffffff"
            android:layout_margin="4dp"/>
    </LinearLayout>
</LinearLayout>